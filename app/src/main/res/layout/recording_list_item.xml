<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail_container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/thumbnail_container"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recording_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                tools:text="Recording Title" />

            <TextView
                android:id="@+id/song_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Song Title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail_container"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/thumbnail_container"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Created on:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="10/10/2019" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail_container"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                tools:background="@android:color/black" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:alpha="1"
                android:src="@drawable/ic_play_icon_24dp"
                 />

        </android.support.v7.widget.CardView>




    </RelativeLayout>

</android.support.v7.widget.CardView>


<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_orange</item>
        <item name="colorPrimaryDark">@color/darker_orange</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/off_white</item>

    </style>

    <style name="ListItemTextWhite">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
